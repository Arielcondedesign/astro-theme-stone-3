    <option value="above-10000">Above 10.000 €</option>
  </select>
</div>
<!-- Project delivery priority input -->
<div>
  <label for="delivery-priority" class="sr-only">Delivery Priority</label>
  <select
    name="delivery-priority"
    id="delivery-priority"
    class="hover:ring-primary-600 focus:ring-primary-600 dark:hover:ring-primary-400 dark:focus:ring-primary-400 bg-primary-50 dark:bg-primary-950 ring-primary-900/40 dark:ring-primary-200/40 block w-full appearance-none rounded-md border-0 px-4 py-4 text-base ring-1 transition focus:outline-none focus:ring-2"
  >
    <option value="" disabled selected>Select delivery priority</option>
    <option value="immediate">Immediate Impact</option>
    <option value="short-term">Short-Term Impact</option>
    <option value="medium-term">Medium-Term Impact</option>
    <option value="long-term">Long-Term Impact</option>
  </select>
</div>

        <!-- Email input -->
